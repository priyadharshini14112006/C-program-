#include <stdio.h>

int main() {

    int pizzas, puffs, cooldrinks;

    int pizza_price = 100;

    int puff_price = 20;

    int cooldrink_price = 10;

    // Input

    scanf("%d", &pizzas);

    scanf("%d", &puffs);

    scanf("%d", &cooldrinks);

    // Total calculation

    int total = (pizzas * pizza_price) + (puffs * puff_price) + (cooldrinks * cooldrink_price);

    // Output

    printf("Bill Details\n");

    printf("No of pizzas:%d\n", pizzas);

    printf("No of puffs:%d\n", puffs);

    printf("No of cooldrinks:%d\n", cooldrinks);

    printf("Total price=%d\n", total);

    printf("ENJOY THE SHOW!!!\n");

    return 0;

}
