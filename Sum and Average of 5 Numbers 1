#include <stdio.h>

int main() {

    int numbers[5];

    int sum = 0;

    float average;

    // Input 5 integers

    for(int i = 0; i < 5; i++) {

        scanf("%d", &numbers[i]);

        sum += numbers[i];

    }

    // Calculate average

    average = sum / 5.0;

    // Output result

    printf("Sum of the 5 number is : %d\n", sum);

    printf("Average of the 5 number is : %.1f\n", average);

    return 0;

}
