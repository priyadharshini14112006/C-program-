#include <stdio.h>

int main() {

    int x1, y1, x2, y2;

    float mid_x, mid_y;

    // Read input values

    scanf("%d", &x1);

    scanf("%d", &y1);

    scanf("%d", &x2);

    scanf("%d", &y2);

    // Calculate the midpoint

    mid_x = (x1 + x2) / 2.0;

    mid_y = (y1 + y2) / 2.0;

    // Output the result

    printf("Binoy's house is located at (%.1f,%.1f)\n", mid_x, mid_y);

    return 0;

}
